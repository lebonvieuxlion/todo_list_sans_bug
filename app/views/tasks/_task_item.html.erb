        <!-- le li est en display none pour appliquer un slideDown sur create.js-->
        <li style="display: none;">

          <%= task.title  %>
          <% unless task.deadline.nil? %>
            , to read: <%= task.deadline.strftime('%D')  %>
          <% end %>

            <%= check_box_tag 'status_task', 'status',false , data: {remote: true, url: task_path(task.id), method: :patch} %>

          <%= link_to task_path(task.id), method: :delete, remote: true do %>

            <i class="fas fa-trash-alt"></i>
            
          <% end %>

        </li>